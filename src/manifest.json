{
  "manifest_version": 3,
  "name": "AI Suggested Replies For WhatsApp",
  "version": "0.0.7",
  "description": "AI suggested replies for WhatsAppâ„¢ web",
  "icons": {
    "16": "icons/Ext-Icon-1.png",
    "32": "icons/Ext-Icon-1.png",
    "48": "icons/Ext-Icon-1.png",
    "128": "icons/Ext-Icon-1.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "AI Suggested Replies For WhatsApp",
    "default_icon": "icons/Ext-Icon-1.png"
  },
  "options_page": "options/options.html",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "optional_host_permissions": [
    "https://api.openai.com/*",
    "https://openrouter.ai/*",
    "https://api.anthropic.com/*",
    "https://api.mistral.ai/*",
    "https://api.github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "parser.js",
        "uiStuff.js",
        "confirmDialog.js",
        "contentScript.js"
      ]
    }
  ]
}
